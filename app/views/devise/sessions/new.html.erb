<section class="section">
	<div class="column is-4 is-offset-4 devise-form has-text-centered">
		<h1 class="title">Log in</h1>
		
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="field">
			<%= f.label :email, :class => "label" %>
			<%= f.email_field :email, autofocus: true, :class => "input is-large" %>
		</div>
		
		<div class="field">
			<%= f.label :password, :class => "label" %>
			<%= f.password_field :password, autocomplete: "off", :class => "input is-large" %>
		</div>
		
		<% if devise_mapping.rememberable? -%>
		<div class="field">
			<%= f.check_box :remember_me, :class => "checkbox" %>
			<%= f.label :remember_me %>
		</div>
		<% end -%>
		
		<div class="actions">
			<%= f.submit "Log in", :class => "input is-primary" %>
		</div>
		<% end %>

		<br>
		
		<%= render "devise/shared/links" %>
	</div>
</section>

